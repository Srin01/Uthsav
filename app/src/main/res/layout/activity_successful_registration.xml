<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Activities.SuccessfulRegistrationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navyBlue"
        android:elevation="5dp"
        tools:ignore="MissingConstraints"
        android:onClick="onClickToolBar">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:src="@drawable/utsav_white_text"
            android:onClick="onClickHomeScreen"
            />
    </androidx.appcompat.widget.Toolbar>

    <com.github.jinatonic.confetti.ConfettiView
        android:id="@+id/confettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingClass" />

    <TextView
        android:id="@+id/successful_registration_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/caudex"
        android:text="You have successfully registered for the event"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/successfulRegistration_eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event name"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/caudex"
        android:textColor="#000000"

        app:layout_constraintEnd_toEndOf="@id/successful_registration_textView"
        app:layout_constraintStart_toStartOf="@id/successful_registration_textView"
        app:layout_constraintTop_toBottomOf="@id/successful_registration_textView" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:padding="15dp"
        android:fontFamily="@font/brawler"
        android:background="@color/Peach"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.9"
        android:onClick="onClickBomb"/>

</androidx.constraintlayout.widget.ConstraintLayout>